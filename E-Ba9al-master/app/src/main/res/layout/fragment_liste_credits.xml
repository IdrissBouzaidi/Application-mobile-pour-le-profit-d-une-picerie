<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foregroundTint="#E91E63"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/rechercheClient"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:paddingRight="10dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/chercher"
            android:hint="بحث" />

        <ImageButton
            android:id="@+id/voirTousLesClients"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="35dp"
            android:src="@drawable/eye_black" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemCreditRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="-50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ajouterAuCarnet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="إضافة" />
        <EditText
            android:id="@+id/prixTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="الثمن"/>
        <EditText
            android:id="@+id/nomClient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="اسم المستخدم"/>
    </LinearLayout>
</LinearLayout>